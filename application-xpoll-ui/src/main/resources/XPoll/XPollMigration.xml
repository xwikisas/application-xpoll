      <code>require(['jquery'], function ($) {
  $(document).ready(function() {
    $('.xpoll-migration-warning a').click(function(event) {
      event.preventDefault();
      var warningDiv = $('.xpoll-migration-warning');
      var progressNotification = new XWiki.widgets.Notification($jsontool.serialize($services.localization.render('xpoll.migration.inProgress')), 'inprogress');

      warningDiv.hide();
      $.post(new XWiki.Document('XPollMigration', 'XPoll').getURL('get', 'migrate=true&amp;token=$services.csrf.getToken()'))
        .done(function() {
          new XWiki.widgets.Notification($jsontool.serialize($services.localization.render('xpoll.migration.migrated')), 'done');
          warningDiv.remove();
        })
        .fail(function(e) {
          new XWiki.widgets.Notification($jsontool.serialize($services.localization.render('xpoll.migration.failed')), 'error');
          warningDiv.show();
        })
        .always(function() {
          progressNotification.hide();
        });
    });

  });
});</code>
